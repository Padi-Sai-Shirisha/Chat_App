-- Create the 'login' table
CREATE TABLE login (
    username VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL,
    PRIMARY KEY (username)
);

-- Create the 'message' table
CREATE TABLE message (
 
    sender_id INT NOT NULL,
    receiver_id INT NOT NULL,
    message TEXT,
    time TIMESTAMP
);


